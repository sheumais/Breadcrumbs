<GuiXml>
    <Controls>
        <TopLevelControl name="Breadcrumbs_Menu_Window" clampedToScreen="true" mouseEnabled="true" movable="true" hidden="true" >
            <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="-150" />
            <Dimensions x="400" y="250" />
            <Controls>
                <Backdrop name="$(parent)_BG">
                    <Center file="esoui/art/tooltips/ui-tooltipcenter.dds" />
                    <Edge file="esoui/art/tooltips/ui-sliderbackdrop.dds" edgeFileWidth="64" edgeFileHeight="8" />
                    <AnchorFill />
                </Backdrop>
                <Control name="$(parent)_Title" >
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" offsetX="4" offsetY="4" />
                    <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" offsetX="-4" offsetY="40" />
                    <Controls>
                        <Label name="$(parent)_Subtitle" font="ZoFontHeader" text="Breadcrumbs Line Menu" >
                            <Anchor point="CENTER" relativePoint="CENTER" />
                        </Label>
                        <Button name="$(parent)_Close" inherits="ZO_CloseButton" >
                            <Anchor point="RIGHT" relativePoint="RIGHT" offsetX="-4" offsetY="-4" />
                            <OnClicked>
                                Breadcrumbs.HideUI()
                            </OnClicked>
                        </Button>
                    </Controls>
                </Control>
                
                <Texture name="$(parent)_Coloured_Square" color="FFFFFF">
                    <Anchor point="CENTER" relativePoint="CENTER" />
                    <Dimensions x="80" y="80" />
                </Texture>

                <Control name="$(parent)_Button_Group">
                    <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)"/>
                    <Controls>
                        <Button name="$(parent)_Place_Button" text="Place" inherits="ZO_DefaultButton" >
                            <Anchor point="LEFT" relativePoint="LEFT" offsetY="-26" offsetX="-4" />
                            <OnClicked>
                                Breadcrumbs.CreateLineFromLocs()
                            </OnClicked>
                        </Button>
                        <Button name="$(parent)_Remove_Button" text="Remove" inherits="ZO_DefaultButton" >
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_Place_Button" offsetX="10" />
                            <OnClicked>
                                Breadcrumbs.RemoveClosestLine()
                            </OnClicked>
                        </Button>
                        
                        <Button name="$(parent)_Loc2" text="Save Loc2" inherits="ZO_DefaultButton">
                            <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)_Place_Button" offsetY="-6"/>
                            <OnClicked>
                                Breadcrumbs.Loc2()
                            </OnClicked>
                        </Button>
                        <Button name="$(parent)_Loc1" text="Save Loc1" inherits="ZO_DefaultButton">
                            <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)_Loc2" offsetY="-6"/>
                            <OnClicked>
                                Breadcrumbs.Loc1()
                            </OnClicked>
                        </Button>

                    </Controls>
                </Control>
                
                <Control name="$(parent)_ColorButtons">
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$(parent)" offsetX="-60" offsetY="-12" />
                    <Controls>
                        <Button name="$(parent)_Red_Button" text="Red" inherits="ZO_DefaultButton">
                            <Anchor point="BOTTOM" relativePoint="BOTTOM" />
                            <OnClicked>
                                Breadcrumbs.SetLineRed()
                            </OnClicked>
                        </Button>
                        <Button name="$(parent)_Green_Button" text="Green" inherits="ZO_DefaultButton">
                            <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$(parent)_Red_Button" offsetY="-6" />
                            <OnClicked>
                                Breadcrumbs.SetLineGreen()
                            </OnClicked>
                        </Button>
                        <Button name="$(parent)_Magenta_Button" text="Magenta" inherits="ZO_DefaultButton">
                            <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$(parent)_Green_Button" offsetY="-6" />
                            <OnClicked>
                                Breadcrumbs.SetLineMagenta()
                            </OnClicked>
                        </Button>
                        <Button name="$(parent)_White_Button" text="White" inherits="ZO_DefaultButton">
                            <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$(parent)_Magenta_Button" offsetY="-6" />
                            <OnClicked>
                                Breadcrumbs.SetLineWhite()
                            </OnClicked>
                        </Button>
                        <Button name="$(parent)_Custom_Button" text="Custom" inherits="ZO_DefaultButton">
                            <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$(parent)_White_Button" offsetY="-6" />
                            <OnClicked>
                                Breadcrumbs.ShowColourPicker()
                            </OnClicked>
                        </Button>
                    </Controls>
                </Control>

            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
